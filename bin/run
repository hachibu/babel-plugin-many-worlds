#!/usr/bin/env node

var babel  = require('@babel/core'),
    plugin = require('../src/index'),
    yargs  = require('yargs');

var desc = 'Explore the many-worlds interpretation of quantum mechanics and see mistakes you might have made in another timeline.';
var argv = yargs
  .usage('$0 <filepath>', desc, (yargs) => {
    yargs.positional('filepath', {
      describe: 'JavaScript filepath.',
      type: 'string',
    })
  })
  .option('worlds', {
    alias: 'w',
    default: 1,
    describe: 'Number of worlds to explore.',
    type: 'number',
  })
  .argv;

if (argv.worlds <= 0) {
  argv.worlds = argv.w = 1;
}

function printResult({ code }, i) {
  console.log(`/* World ${i + 1} */`);
  console.log(code, "\n");
}

async function main() {
  var promises = [];
  var options = {
    plugins: [plugin]
  };

  var i = 0;
  var result = babel.transformFileSync(argv.filepath, options);

  printResult(result, i);

  while (++i < argv.worlds) {
    try {
      result = babel.transformSync(result.code, options);
    } catch(e) {
      console.log(e);
      break;
    }

    printResult(result, i);
  }
}

main();
